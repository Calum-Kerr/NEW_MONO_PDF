# Environment variables for Flask API
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your_secret_key_here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_STORAGE_BUCKET=pdf-files

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRO_MONTHLY_PRICE_ID=price_your_monthly_price_id
STRIPE_PRO_YEARLY_PRICE_ID=price_your_yearly_price_id
STRIPE_ENTERPRISE_PRICE_ID=price_your_enterprise_price_id

# Email Configuration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=your_email@gmail.com
FROM_NAME=PDF Tools

# File Configuration
MAX_FILE_SIZE=52428800  # 50MB in bytes

# StirlingPDF Integration
STIRLING_PDF_URL=http://localhost:8080
STIRLING_PDF_API_KEY=your_stirling_api_key
STIRLING_PDF_TIMEOUT=120

# Production Configuration (for Heroku deployment)
WEB_CONCURRENCY=4
GUNICORN_TIMEOUT=120
PLATFORM=snackpdf  # or 'revisepdf'
PRIMARY_DOMAIN=snackpdf.com  # or 'revisepdf.com'

# Redis Configuration (for production caching and rate limiting)
REDIS_URL=redis://localhost:6379

# Monitoring and Analytics
NEW_RELIC_LICENSE_KEY=your_newrelic_license_key
SENTRY_DSN=your_sentry_dsn